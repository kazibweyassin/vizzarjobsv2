# VizzarJobs Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/vizzar_jobs
# For development: postgresql://localhost:5432/vizzar_jobs_dev
# For production: Use your hosted PostgreSQL URL

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_PRICE_STARTER=price_starter_monthly_49
STRIPE_PRICE_PROFESSIONAL=price_professional_monthly_149
STRIPE_PRICE_EXECUTIVE=price_executive_monthly_299
STRIPE_PRICE_PREMIUM=price_premium_monthly_497

# Email Configuration (choose one)
# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@vizzarjobs.com

# Or Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=another-secure-secret-for-sessions

# File Upload (if using AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=vizzar-jobs-uploads

# Optional: Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Optional: Logging
LOG_LEVEL=info

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
